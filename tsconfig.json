{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./src/js",
        "rootDir": "./src/ts",
        "declaration": false,
        "sourceMap": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"]
    },
    "include": ["src/ts/**/*.ts"],
    "exclude": ["node_modules"]
}
